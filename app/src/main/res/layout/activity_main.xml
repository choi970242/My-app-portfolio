<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aldrichchoi.myappportfolio.MainActivity"
    android:orientation="vertical"
    android:paddingTop="50dp"
    >

    <TextView
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:text="POPULAR MOVIES"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/colorUdacity"
        android:textColor="@color/colorWhite" />

    <Button
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:text="STOCK HAWK"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/colorUdacity"
        android:textColor="@color/colorWhite" />

    <Button
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/colorUdacity"
        android:textColor="@color/colorWhite" />

    <Button
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:text="MAKE YOUR APP MATERIAL"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/colorUdacity"
        android:textColor="@color/colorWhite" />

    <Button
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:text="GO OBIQUITOUS"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/colorUdacity"
        android:textColor="@color/colorWhite" />

    <Button
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/colorUdacity"
        android:textColor="@color/colorWhite" />
</LinearLayout>
